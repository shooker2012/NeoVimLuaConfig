# ================================================================================
global !p
def insert_new_enum(snip):
	if snip.tabstop <= 3:
		return

	obj = snip.tabstops[snip.tabstop]
	if obj.current_text != "":
		return

	snip.expand_anon(f"\n\"\",")

	cursor_pos_x = snip.cursor[0]
	cursor_pos_y = snip.cursor[1] - 2
	snip.cursor.set(cursor_pos_x, cursor_pos_y)
endglobal

# ================================================================================
post_jump "insert_new_enum(snip)"
