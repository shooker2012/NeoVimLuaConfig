	${0:${VISUAL:--loop body }}
end
endsnippet


# ================================================================================
snippet log
warn("~~~~~~~~~~log $1"$2)
endsnippet

# ================================================================================
snippet "logv (.*)\;" br
warn( "~~~~~~~~~~log $1:", `!p

text = match.group(1)
values = text.split(',')

params = ''
for i,v in enumerate(values):
	v = v.strip()
	params += '"{0}: "..tostring({0})'.format( v )
	if i != len(values)-1:
		params += ", "
snip.rv = params
`$2 )$0
endsnippet

# ================================================================================
snippet "lognil (.*)\;" br
-- [TEST_CODE]
`!p
pos = 0
text = match.group(1)

while pos < len(text):
	if pos != 0:
		snip.rv += '\n'
	p_dot = text.find('.', pos)
	p_colon = text.find(':', pos)
	if p_dot == -1 and p_colon == -1:
		pos = len(text)
	elif p_dot == -1:
		pos = p_colon
	elif p_colon == -1:
		pos = p_dot
	else:
		pos = min(p_dot, p_colon)
	snip.rv += snip.mkline( f'warn("~~~~~~~~~~log check nil: {text[:pos]}", {text[:pos]})' )
	# snip += f'warn("~~~~~~~~~~log check nil: {text[:pos]}", {text[:pos]})' 
	pos += 1
`$0
-- [TEST_CODE_END]
endsnippet

